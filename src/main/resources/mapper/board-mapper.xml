<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 반드시 작성! -->
<mapper namespace="Board">
    <insert id="save" parameterType="board">
        insert into board_table(boardWriter, boardPass, boardTitle, boardContents, boardHits, fileAttached)
        values (#{boardWriter}, #{boardPass}, #{boardTitle}, #{boardContents}, #{boardHits}, #{fileAttached})
    </insert>
    <select id="list" resultType="board">
        select * from board_table
    </select>
    <select id="detail" parameterType="int" resultType="board">
        select * from board_table where id = #{id}
    </select>
</mapper>









